{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2018",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "build/",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}